@model DogShelter.Models.CreatePostModel;

<div asp-validation-summary="All">
    <form asp-area="Admin" asp-controller="Creator" asp-action="NewPost" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="NewPost.Title">Название</label>
            <input asp-for="NewPost.Title" required="">
            <span asp-validation-for="NewPost.Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPost.ShortDesc">Краткое описание</label>
            <input asp-for="NewPost.ShortDesc" class="form-control" required="">
            <span asp-validation-for="NewPost.ShortDesc"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPost.Desc">Полное описание</label>
            <textarea asp-for="NewPost.Desc" class="form-control" required=""></textarea>
            <span asp-validation-for="NewPost.Desc"></span>
        </div>
        <div class="form-group">
            <label asp-for="Img11">Фото</label>
            <input asp-for="Img11" class="form-control-file" accept="image/jpeg,image/png" type="file" required="" multiple />
            <span asp-validation-for="Img11"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>