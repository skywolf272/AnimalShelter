@model IEnumerable<DogShelter.Models.Dog>

    <div class="d-flex mt-3 flex-wrap">
        @foreach (Dog dog in Model)
        {
        <div class="box-shadow rounded shadow-lg d-flex m-3" style="max-height: 350px; width: 900px;">
            <img class="rounded" style="height: 100%; background-size: cover;" src="@dog.ImgPath" data-holder-rendered="true">

            <ul class="list-group list-group-flush p-4" style="width: 100%">
                <h3>@dog.Nickname</h3>
                <li class="list-group-item">Возраст: @dog.Age</li>
                @{
                    if (dog.Male)
                    {
                        <li class="list-group-item">Пол: мужской</li>
                    }
                    else
                    {
                        <li class="list-group-item">Пол: женский</li>
                    }
                }
                <li class="list-group-item">Краткое описание: @dog.ShortDesc</li>
                <div class="d-flex p-3 justify-content-between align-items-center">
                    <div class="btn-group">
                        <a class="btn btn-sm btn-outline-secondary bg-primary text-white" asp-controller="Attendance" asp-action="MoreAboutDog" asp-route-ID="@dog.ID">Узнать больше</a>
                    </div>
                    <small class="text-muted">@dog.DogPostDate.Day.@dog.DogPostDate.Month.@dog.DogPostDate.Year</small>
                </div>
            </ul>
        </div>
            }
    </div>
