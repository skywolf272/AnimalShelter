<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DogShelter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/AboutUs.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/More.css")" />
</head>
<body>
    <header style="background-color: #f7f3e8">
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-image: url(/img/asfglskg93r3nruof8938.png); background-size: cover;">
            <div class="container rounded" style="margin-top: 100px; background-color: #11524d">

                <a class="navbar-brand btn" asp-area="" asp-controller="Home" asp-action="Index">DogShelter</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link btn" asp-area="" asp-controller="Home" asp-action="Index">Новости</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" asp-area="" asp-controller="Home" asp-action="AboutUs">О нас</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Услуги
                        </a>
                        <div class="dropdown-menu" style="z-index: 1000;">
                            <a class="dropdown-item" asp-area="" asp-controller="Attendance" asp-action="TakeCare">Отдать на передержку</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Attendance" asp-action="TakeDog">Взять собаку</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Attendance" asp-action="GiveDog">Отдать собаку</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Attendance" asp-action="Help">Помочь приюту</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Войти</a>
                    </li>
                </ul>

            </div>
        </nav>
    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-light text-muted">
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3 pt-3">
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            О нас
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Новости</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">О нас</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Связаться с нами</a>
                        </p>
                    </div>

                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Питомцам
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Отдать питомца на передержку</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Взять из приюта</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Отдать питомца в приют</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Помощь приюту</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Контакты
                        </h6>
                        <p><i class="fas fa-home me-3"></i> New York, NY 10012, US</p>
                        <p>
                            <i class="fas fa-envelope me-3"></i>
                            shelter23@yandex.ru
                        </p>
                        <p><i class="fas fa-phone me-3"></i>+8 234 567 88</p>
                        <p><i class="fas fa-print me-3"></i>+8 234 567 89</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
