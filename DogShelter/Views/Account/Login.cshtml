@model DogShelter.Models.SignInViewModel

<div asp-validation-summary="All">

        <div class="card" style="width: 40%">
            <div class="card-header">
                <h3>Sign In</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-controller="Account">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input asp-for="Login" class="form-control" placeholder="username" type="text" required="">
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="password" type="password" required="">
                    </div>
                    <span asp-validation-for="Password"></span>

                    <div class="form-group">
                        <input value="Login" class="btn float-right login_btn" type="submit">
                    </div>
                </form>
            </div>
        </div>

</div>